@model RMIS.Models.Account.Departments.UpdateDepartmentView;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/account/department/updateDepartment.js"></script>
</head>
<body>
    <div class="modal-header">
        <h5 class="modal-title" id="registerModalLabel">修改部門資料</h5>
    </div>
    <div class="modal-content">
        <div class="modal-body">
            <form>
                <div>
                    <input type="hidden" class="form-control" asp-for="Id" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Name">部門名稱</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>
                        <input type="radio" asp-for="Status" value="true" /> 啟用
                    </label>
                    <label>
                        <input type="radio" asp-for="Status" value="false" /> 禁止
                    </label>
                </div>
                <button id="submit" class="btn btn-primary">儲存</button>
                <button id="cancel" class="btn btn-secondary">取消</button>
            </form>
        </div>
    </div>
</body>
</html>