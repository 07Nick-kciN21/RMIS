@model RMIS.Models.Account.Departments.CreateDepartmentView;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account/rolePermission.css" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/account/department/createDepartment.js"></script>
</head>
<body>
    <form>
        <div class="form-group">
            <label asp-for="Name">部門名稱</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label>
                <input type="radio" asp-for="Status" value="true" /> 啟用
            </label>
            <label>
                <input type="radio" asp-for="Status" value="false" /> 禁止
            </label>
        </div>
        <button id="submit" class="btn btn-primary">儲存</button>
        <button id="cancel" class="btn btn-secondary">取消</button>
    </form>
</body>
</html>
