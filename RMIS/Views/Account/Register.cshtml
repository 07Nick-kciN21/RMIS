@model RMIS.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "註冊";
}

<h2 class="text-center">註冊</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" placeholder="輸入使用者名稱">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="輸入電子郵件">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="輸入密碼" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="再次輸入密碼" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">註冊</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Login">已經有帳號？登入</a>
        </div>
    </div>
</div>