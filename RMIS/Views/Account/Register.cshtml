@model RMIS.Models.Account.RegisterUser

@{
    ViewData["Title"] = "註冊";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@if (ViewData["ErrorMessage"] != null)
{
        <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
        </div>
}

<h2 class="text-center">註冊</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Username" class="form-label">使用者</label>
                <input asp-for="Username" class="form-control" placeholder="輸入使用者名稱">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Account" class="form-label">帳號</label>
                <input asp-for="Account" class="form-control" placeholder="輸入帳號">
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Password" class="form-label">密碼</label>
                <input asp-for="Password" class="form-control" placeholder="輸入密碼" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ConfirmPassword" class="form-label">確認密碼</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="再次輸入密碼" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Email" class="form-label">信箱</label>
                <input asp-for="Email" class="form-control" placeholder="輸入信箱">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Phone" class="form-label">電話</label>
                <input asp-for="Phone" class="form-control" placeholder="輸入電話">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">送出請求</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Login">已經有帳號？登入</a>
        </div>
    </div>
</div>