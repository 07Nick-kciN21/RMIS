@{
    ViewData["Title"] = "身分管理";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<script src="~/js/account/roleManager.js"></script>
<h2>身分列表</h2>
<div style="display: flex;">
    <select id="roleSelector" class="selector form-select">
    </select>
    <button id="createRole" class="btn btn-primary">新增身分</button>
</div>

<table class="table table-bordered text-center permissionTable">
    <thead class="table-primary">
        <tr>
            <th style="width: 200px; max-width: 200px;">身分名稱</th>
            <th style="width: 100px; max-width: 100px;">狀態</th>
            <th style="width: 200px; max-width: 200px;">創建日期</th>
            <th style="width: 70px; max-width: 70px;">權限</th>
            <th style="width: 140px; max-width: 140px;">操作</th>
        </tr>
    </thead>
    <tbody id="roleTable">
    </tbody>
</table>

