@model RMIS.Models.Account.CreateRolePermission

<link rel="stylesheet" href="~/css/account/rolePermission.css" />

<h2>新增角色與權限</h2>

<form asp-action="CreateRolePermission" method="post">
    <div class="mb-3">
        <label asp-for="RoleName" class="form-label">角色名稱</label>
        <input type="text" asp-for="RoleName" class="form-control" required>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <h4>設定權限</h4>
    <table class="table table-bordered permissionTable">
        <thead class="table-primary">
            <tr>
                <th>權限名稱</th>
                <th>查看</th>
                <th>新增</th>
                <th>修改</th>
                <th>刪除</th>
                <th>匯出</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <tr>
                    <td>@Model.Permissions[i].PermissionName</td>
                    <td><input asp-for="Permissions[i].Read" type="checkbox"></td>
                    <td><input asp-for="Permissions[i].Create" type="checkbox"></td>
                    <td><input asp-for="Permissions[i].Update" type="checkbox"></td>
                    <td><input asp-for="Permissions[i].Delete" type="checkbox"></td>
                    <td><input asp-for="Permissions[i].Export" type="checkbox"></td>
                    <input type="hidden" asp-for="Permissions[i].PermissionId">
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">建立角色</button>
</form>
