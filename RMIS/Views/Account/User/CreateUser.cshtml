@model RMIS.Models.Account.Users.CreateUserView;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/account/user/createUser.js"></script>
</head>
<body>
    <div class="modal-header">
        <h5 class="modal-title" id="registerModalLabel">申請帳號</h5>
    </div>
    <div class="modal-content">
        <div class="modal-body">
            <form>
                <div class="form-group row mb-3">
                    <label asp-for="DisplayName" class="col-sm-2 col-form-label">名稱</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="DisplayName">
                        <div class="invalid-feedback">
                            使用者名稱需為 2~20 字，僅限中英文、數字與底線。
                        </div>
                        <span class="text-danger" asp-validation-for="DisplayName"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Account" class="col-sm-2 col-form-label">帳號</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Account">
                        <small class="form-text text-muted">
                            使用者帳號長度需為 8~20 字，只能包含英文字母、數字
                        </small>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Password" class="col-sm-2 col-form-label">密碼</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Password">
                        <small class="form-text text-muted">
                            使用者密碼長度需為 2~20 字，必須包含至少 1 個大寫字母、1 個小寫字母和 1 個數字
                        </small>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="RoleId" class="col-sm-2 col-form-label">身分</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.RoleId, Model.Roles, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="DepartmentId" class="col-sm-2 col-form-label">部門</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(model => model.DepartmentId, Model.Departments, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Email" class="col-sm-2 col-form-label">信箱</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Email">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Phone" class="col-sm-2 col-form-label">電話</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Phone">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label">狀態</label>
                    <div class="col-sm-10 d-flex align-items-center">
                        <div class="form-check me-3">
                            <input type="radio" class="form-check-input" asp-for="Status" value="true" id="statusEnabled">
                            <label class="form-check-label" for="statusEnabled">啟用</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" asp-for="Status" value="false" id="statusDisabled">
                            <label class="form-check-label" for="statusDisabled">禁止</label>
                        </div>
                    </div>
                </div>

                <button id="submit" class="btn btn-primary">儲存</button>
                <button id="cancel" class="btn btn-secondary">取消</button>
            </form>
        </div>
    </div>
</body>
</html>