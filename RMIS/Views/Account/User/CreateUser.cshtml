@model RMIS.Models.Account.Users.CreateUserView;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account/rolePermission.css" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/account/user/createUser.js"></script>
</head>
<body>
    <form>
        <div>
            <label asp-for="DisplayName">名稱</label>
            <input type="text" class="form-control" asp-for="DisplayName">
            <small class="form-text text-muted">
                使用者名稱長度需為 2~20 字，只能輸入中文、英文、數字或底線
            </small>
        </div>
        <div>
            <label asp-for="Account">帳號</label>
            <input type="text" class="form-control" asp-for="Account">
            <small class="form-text text-muted">
                使用者帳號長度需為 8~20 字，只能包含英文字母、數字
            </small>
        </div>
        <div>
            <label asp-for="Password">密碼</label>
            <input type="text" class="form-control" asp-for="Password">
            <small class="form-text text-muted">
                使用者密碼長度需為 2~20 字，必須包含至少 1 個大寫字母、1 個小寫字母和 1 個數字
            </small>
        </div>
        <div class="form-group">
            <label asp-for="RoleId">身分</label>
            @Html.DropDownListFor(model => model.RoleId, Model.Roles, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="DepartmentId">部門</label>
            @Html.DropDownListFor(model => model.DepartmentId, Model.Departments, new { @class = "form-control" })
        </div>        
        <div class="form-group">
            <label asp-for="Email">信箱</label>
            <input type="text" class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label asp-for="Phone">電話</label>
            <input type="text" class="form-control" asp-for="Phone">
        </div>
        <div class="form-group">
            <label>
                <input type="radio" asp-for="Status" value="true" /> 啟用
            </label>
            <label>
                <input type="radio" asp-for="Status" value="false" /> 禁止
            </label>
        </div>
        <button id="submit" class="btn btn-primary">儲存</button>
        <button id="cancel" class="btn btn-secondary">取消</button>
    </form>
</body>
</html>