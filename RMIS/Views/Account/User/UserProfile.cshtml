@model RMIS.Models.Account.Users.UserProfileView;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/account/_accountLayout.css" />
        <link rel="stylesheet" href="~/css/account/_sidebar.css" />
        <link rel="stylesheet" href="~/css/account/userProfile.css"/>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/account/user/userProfile.js"></script>
    </head>
    <header class="bg-light">
        <div id="col1">
            <div id="left-nav" style="display: flex;">
                <div class="head-logo-box navbar-toggle">
                    <div class="head-logo">權限管理平台</div>
                </div>
            </div>
        </div>
        <div id="col2" style="margin-left:auto">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li>
                                <div class="user-icon ms-2"></div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">                                    
                                    @Model.DisplayName
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="nav-link menu-title" href="/Portal/Logout">
                                            <h5>登出</h5>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="nav-link menu-title" href="/Account/User/List">
                                            <h5>權限管理</h5>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <body>
        <h2 class="text-center">使用者資料</h2>
        <div class="container">
            <div class="row justify-content-center mt-3">
                <div class="col-md-4">
                    <form class="container">
                        <div>
                            <input type="hidden" class="form-control" asp-for="Id" readonly>
                        </div>
                        <div class="form-group">
                            <label asp-for="DisplayName">名稱</label>
                            <input type="text" class="form-control" asp-for="DisplayName">
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName">帳號</label>
                            <label asp-for="UserName">@Model.UserName</label>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName">密碼</label>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#resetPassword">修改密碼</button>
                        </div>
                        <div class="form-group">
                            <label asp-for="Role">身分</label>
                            <label asp-for="Role">@Model.Role</label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Department">部門</label>
                            <label asp-for="Department">@Model.Department</label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">信箱</label>
                            <input type="text" class="form-control" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone">電話</label>
                            <input type="text" class="form-control" asp-for="Phone">
                        </div>
                        <button id="submit" class="btn btn-primary">儲存</button>
                        <button id="cancel" class="btn btn-secondary" href="/Home/Index">取消</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal fade" id="resetPassword" tabindex="-1" aria-labelledby="resetPassword" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">修改密碼</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form form-horizontal" method="post">
                            <div class="form-body">
                                <div class="row">
                                    <input type="hidden" class="form-control" asp-for="Id" readonly>
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" style="padding-top:0.75em;text-align:right">原密碼</label>
                                            <div class="col-md-8">
                                                <input type="password" id="OriginPassword" name="OriginPassword" class="form-control border-primary" placeholder="原密碼">
                                                <div class="form-control-position" style="right: 15px;">
                                                    <i class="fa fa-eye fa-eye-slash mimaShow" data-id="Org"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" style="padding-top:0.75em;text-align:right">新密碼</label>
                                            <div class="col-md-8">
                                                <input type="password" id="NewPassword" name="NewPassword" class="form-control border-primary" placeholder="新密碼">
                                                <div class="form-control-position" style="right: 15px;">
                                                    <i class="fa fa-eye fa-eye-slash mimaShow" data-id="New"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-md-3 label-control" style="padding-top:0.75em;text-align:right">確認新密碼</label>
                                            <div class="col-md-8">
                                                <input type="password" id="CheckPassword" name="CheckPassword" class="form-control border-primary" placeholder="確認新密碼">
                                                <div class="form-control-position" style="right: 15px;">
                                                    <i class="fa fa-eye fa-eye-slash mimaShow" data-id="Check"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-10">
                                        <div class="form-group row">
                                            <label class="col-md-2 label-control" style="padding-top:0.75em;text-align:right"></label>
                                            <div class="col-md-10 ">
                                                <label class="text-danger" style="margin-top:10px">密碼規格：8字元以上、包含大寫字母、小寫字母、數字且不可與帳號相同。</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 m-auto">
                                        <button id="password-Save" type="button" class="btn btn-block btn-min-width btn-info mtop"><i class="ft-save"></i> 儲存</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>