@model RMIS.Models.Account.Permissions.UpdatePermissionView;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account/rolePermission.css" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/account/updatePermission.js"></script>
</head>
<body>
    <form>
        <div>
            <input type="hidden" class="form-control" asp-for="Id" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Name">部門名稱</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
        <div class="form-group">
            <label>
                <input type="radio" asp-for="Status" value="true" asp-for="Status" /> 啟用
            </label>
            <label>
                <input type="radio" asp-for="Status" value="false" asp-for="Status" /> 禁止
            </label>
        </div>
        <button id="submit" class="btn btn-primary">儲存</button>
        <button type="button" class="btn btn-secondary">取消</button>
    </form>
</body>
</html>