@model RMIS.Models.Admin.AddRoadProjectInput;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "新增道路專案";
    Layout = null; // 禁用 _Layout.cshtml 加载
}
<script src="~/js/admin/AddRoadProject.js"></script>
<form id="addRoadProjectForm" method="post" style="max-height: 70vh; overflow-y: auto;">
    <div>
        <label>提案人:</label>
        <input id="Proposer" class="form-control" placeholder="王小明議員"/>
    </div>
    <div>
        <label>行政區:</label>
        <select id="adminSelect" class="form-select" style="margin: auto; width: 90%;">
            <option value="-1">請選擇</option>
            <option value="0">桃園區</option>
            <option value="1">大溪區</option>
            <option value="2">中壢區</option>
            <option value="3">楊梅區</option>
            <option value="4">蘆竹區</option>
            <option value="5">大園區</option>
            <option value="6">龜山區</option>
            <option value="7">八德區</option>
            <option value="8">龍潭區</option>
            <option value="9">平鎮區</option>
            <option value="10">新屋區</option>
            <option value="11">觀音區</option>
            <option value="12">復興區</option>
        </select>
    </div>
    <div>
        <label>起點:</label>
        <input id="StartPoint" class="form-control" placeholder="xx路一段"/>
    </div>
    <div>
        <label>終點:</label>
        <input id="EndPoint" class="form-control" placeholder="xx路一段"/>
    </div>
    <div>
        <label>道路長度(公尺):</label>
        <input id="RoadLength" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>現況路寬(公尺):</label>
        <input id="CurrentRoadWidth" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>現況類別:</label>
        <input id="CurrentRoadType" class="form-control" placeholder="未開闢、都計道路..."/>
    </div>
    <div>
        <label>計畫路寬(公尺):</label>
        <input id="PlannedRoadWidth" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>計畫類別:</label>
        <input id="PlannedRoadType" class="form-control" placeholder="未開闢、都計道路..."/>
    </div>
    <div>
        <label>公有土地(筆):</label>
        <input id="PublicLand" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>私有土地(筆):</label>
        <input id="PrivateLand" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>公私土地(筆):</label>
        <input id="PublicPrivateLand" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>工程經費(萬):</label>
        <input id="ConstructionBudget" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>用地經費(萬):</label>
        <input id="LandBudget" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>補償經費(萬):</label>
        <input id="CompensationBudget" type="text" class="form-control" placeholder="0"/>
    </div>
    <div>
        <label>合計經費(萬):</label>
        <input id="TotalBudget" type="text" class="form-control" placeholder="0"/>
    </div>
    @* 備註 *@
    <div>
        <label>備註:</label>
        <textarea id="Remark" class="form-control"></textarea>
    </div>
    <div id="expansionRangeDiv" style="width: 90%; margin: auto;">
        <div style="display:flex">
            <h4>預拓範圍</h4>
            <div id=""></div>
            <button type="button" id="addRangeBtn" title="新增欲拓範圍">+</button>
        </div>
        <table id="rangeTable" class="propTable">
            <thead>
                <tr>
                    <th>順序</th>
                    <th>緯度</th>
                    <th>經度</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    
    <div id="streetViewPhotoDiv" style="width: 90%; margin: auto;">
        <div style="display:flex">
            <h4>街景照片</h4>
            <button type="button" id="addPhotoBtn" title="新增街景照片">+</button>
        </div>
        <table id="photoTable" class="propTable">
            <thead>
                <tr>
                    <th>順序</th>
                    <th>檔案</th>
                    <th>緯度</th>
                    <th>經度</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <button id="submit">提交</button>
</form>