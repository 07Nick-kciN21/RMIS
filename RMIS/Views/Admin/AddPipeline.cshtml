@model RMIS.Models.Admin.AddPipelineInput;

@{
    ViewData["Title"] = "新增管線";
    Layout = null; // 禁用 _Layout.cshtml 加载
}


<form method="post" class="container modal-form">
    <div class="form-group">
        <label asp-for="ManagementUnit">管理單位</label>
        <input asp-for="ManagementUnit" class="form-control" />
        <span asp-validation-for="ManagementUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">類別</label>
        <select asp-for="CategoryId" asp-items="@Model.Category" class="form-control">
            <option value="">-- None --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Name">管線名稱</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KindGroup">種類</label>
        <select id="KindGroup" asp-for="Kind" class="form-control" onchange="getGeometryTypes()">
            @foreach (var kind in Model.KindGroup)
            {
                <option value="@kind.Value">@kind.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="GeometryTypes">圖層</label>
            <select asp-for="GeometryTypes" asp-items="@Model.GeometryTypes" class="form-control" multiple>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Color">顏色</label>
        <input asp-for="Color" type="color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>

<script>
    function getGeometryTypes(kind) {
        $('#KindGroup').on('change', function () {
            const kind = $(this).val();
            console.log(kind);
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        getGeometryTypes();
    });
</script>
