@{
    ViewData["Title"] = "信箱失敗";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}
<div class="portal-page">
    <div class="container-fluid portal-card">
        <h2 class="text-center">信箱認證</h2>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">❌ 信箱驗證失敗！</h4>
                        <p>驗證連結可能已過期或無效。</p>
                        <form id="resendForm" method="post" action="@Url.Action("ResendConfirmationEmail", "Portal")">
                            <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                                <label for="accountInput" class="form-label">請輸入帳號重新寄送驗證信</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="accountInput" name="account" placeholder="請輸入您的帳號" required>
                                </div>
                            </div>
                            <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input id="emailCaptcha" type="text" name="emailCaptcha" class="form-control" placeholder="輸入驗證碼" required>
                                        <span class="input-group-text p-0" style="background: transparent; border:none;">
                                            <img class="captchaImage"
                                                    data-type="email"
                                                    alt="驗證碼"
                                                    title="點擊更新驗證碼"
                                                    style="cursor:pointer; border:1px solid #ccc; height:40px;" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(string.Empty))
                            {
                                var globalErrors = ViewData.ModelState[string.Empty].Errors;
                                if (globalErrors.Count > 0)
                                {
                                    <div class="text-danger text-center mb-2">
                                        @foreach (var error in globalErrors)
                                        {
                                            <div>@error.ErrorMessage</div>
                                        }
                                    </div>
                                }
                            }
                            <button type="submit" class="btn btn-primary">重新寄送驗證信</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>