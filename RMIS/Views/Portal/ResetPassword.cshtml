@model RMIS.Models.Portal.ResetPasswordViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "重設密碼";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}


<div class="portal-page">
    <div class="container-fluid portal-card">
        <h2 class="text-center">重設密碼</h2>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form method="post" asp-action="ResetPassword">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Account" />
                        <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                            <div class="col-sm-8">
                                <input asp-for="Password" class="form-control" placeholder="新密碼"/>
                            </div>
                        </div>

                        <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                            <div class="col-sm-8">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="確認密碼" />
                            </div>
                        </div>

                        <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input type="text" name="captcha" class="form-control" placeholder="輸入驗證碼" required>
                                    <span class="input-group-text p-0" style="background: transparent; border:none;">
                                        <img class="captchaImage"
                                             data-type="resetpassword"
                                             src="/Portal/Captcha?type=resetpassword"
                                             alt="驗證碼"
                                             title="點擊更新驗證碼"
                                             style="cursor:pointer; border:1px solid #ccc; height:40px;" />
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                            <div class="col-sm-8">
                                <button type="submit" class="btn btn-primary w-100">重設密碼</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
