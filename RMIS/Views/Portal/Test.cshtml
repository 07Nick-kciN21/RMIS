@model RMIS.Models.Portal.LoginView

@{
    ViewData["Title"] = "桃園市養護工程處整合協作平台";
    Layout = "~/Views/Shared/_TestPortalLayout.cshtml";
}
   
<div class="h-100 d-flex">
    <div class="container-fluid login mainshadow">
        <div class="container">
            <div class="row justify-content-center">
                <div class="logo"
                        style="background-image: url(/img/logo.png);
                                width: 100px;
                                height: 100px;
                                background-size: contain;
                                background-repeat: no-repeat;
                                background-position: center;">
                </div>
                <h4 class="text-center system_name fw-bold">桃園市工務局開瓶道路系統</h2>
                    <div class="col-md-8">
                        <form action="/Portal/Login" method="post">
                            <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                                <div class="col-sm-8 col-md-12 usericon">
                                    <input class="form-control br25 w-100" placeholder="&emsp;&nbsp;帳號" type="text"
                                        data-val="true" data-val-required="&#x8ACB;&#x8F38;&#x5165;&#x5E33;&#x865F;"
                                        id="UserName" name="UserName" value="" />
                                </div>
                                <span class="text-danger field-validation-valid" data-valmsg-for="UserName"
                                    data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                                <div class="col-sm-8 col-md-12 pwdicon">
                                    <input type="password" class="form-control br25 w-100"
                                        placeholder="&emsp;&nbsp;密碼" data-val="true"
                                        data-val-required="&#x8ACB;&#x8F38;&#x5165;&#x5BC6;&#x78BC;" id="Password"
                                        name="Password" />
                                </div>
                                <span class="text-danger field-validation-valid" data-valmsg-for="Password"
                                    data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <input id="loginCaptcha" type="text" name="loginCaptcha" class="form-control" placeholder="輸入驗證碼" required>
                                        <span class="input-group-text p-0" style="background: transparent; border:none;">
                                            <img class="captchaImage"
                                                    data-type="login"
                                                    alt="驗證碼"
                                                    title="點擊更新驗證碼"
                                                    style="cursor:pointer; border:1px solid #ccc; height:40px;" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4 mt-2 text-end w-100">
                                <a id="forgetBtn" data-bs-toggle="modal" data-bs-target="#forgetModal"
                                    class="txtltbrown fw-bold">忘記密碼</a>
                            </div>
                            <div class="form-group row d-flex justify-content-center" style="margin-bottom: 20px">
                                <button type="submit" class="btn w-100 text-white br25 fs-5 mainshadow fw-bold"
                                    style="background-color:#B7A591">登入</button>
                            </div>
                        </form>
                        <div class="row justify-content-center">
                            <div class="col-sm-4 col-md-12 mt-2 text-center">
                                <a id="registerBtn" data-bs-toggle="modal" data-bs-target="#registerModal"
                                    class="txtltbrown fw-bold">申請帳號</a>
                            </div>

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel">
    <div class="modal-dialog modal-lg modal-dialog-centered ">
        <div class="modal-content register-modal">
            <form id="registerForm" class="needs-validation" novalidate>
                <div class="modal-header">
                    <h5 class="modal-title" id="registerModalLabel">申請帳號</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group row mb-3">
                        <label for="registerDisplayName" class="col-sm-3 col-form-label">使用者名稱</label>
                        <div class="col-sm-9">
                            <input id="registerDisplayName" class="form-control" type="text" name="DisplayName"
                                required pattern="^[\u4e00-\u9fa5a-zA-Z0-9_]{2,20}$">
                            <div class="invalid-feedback">
                                使用者名稱需為 2~20 字，僅限中英文、數字與底線。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="registerAccount" class="col-sm-3 col-form-label">帳號</label>
                        <div class="col-sm-9">
                            <input id="registerAccount" class="form-control" type="text" name="Account" required
                                pattern="^[a-zA-Z0-9]{8,20}$">
                            <div class="invalid-feedback">
                                帳號需為 8~20 字英文或數字。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="registerPassword" class="col-sm-3 col-form-label">密碼</label>
                        <div class="col-sm-9">
                            <input id="registerPassword" class="form-control" type="password" name="Password"
                                required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,20}$">
                            <div class="invalid-feedback">
                                密碼需包含大小寫英文字母與數字，長度 8~20。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="registerConfirmPassword" class="col-sm-3 col-form-label">確認密碼</label>
                        <div class="col-sm-9">
                            <input id="registerConfirmPassword" class="form-control" type="password"
                                name="ConfirmPassword" required>
                            <div class="invalid-feedback">
                                請再次輸入密碼。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="DepartmentId" class="col-sm-3 col-form-label">部門</label>
                        <div class="col-sm-9">
                            <select id="DepartmentId" class="form-control" name="DepartmentId" required>
                                <option value="" disabled selected>請選擇部門</option>
                            </select>
                            <div class="invalid-feedback">
                                請選擇部門。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="RoleId" class="col-sm-3 col-form-label">身分</label>
                        <div class="col-sm-9">
                            <select id="RoleId" class="form-control" name="RoleId" required>
                                <option value="" selected disabled>請選擇身分</option>
                            </select>
                            <div class="invalid-feedback">
                                請選擇身分。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="Email" class="col-sm-3 col-form-label">信箱</label>
                        <div class="col-sm-9">
                            <input id="Email" class="form-control" name="Email" type="email" required>
                            <div class="invalid-feedback">
                                請輸入有效的信箱地址。
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label for="Phone" class="col-sm-3 col-form-label">手機</label>
                        <div class="col-sm-9">
                            <input id="Phone" class="form-control" type="tel" name="Phone" placeholder="09xxxxxxxx"
                                pattern="^09\d{8}$" required>
                            <div class="invalid-feedback">
                                請輸入有效的台灣手機號碼（09xxxxxxxx）。
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">送出</button>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="forgetModal" tabindex="-1" aria-labelledby="forgetModalLabel">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="forgetForm" class="needs-validation" novalidate>
                <div class="modal-header">
                    <h5 class="modal-title" id="forgetModalLabel">忘記密碼</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="關閉"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group row mb-3">
                        <label for="forgetDisplayName" class="col-sm-3 col-form-label">帳號</label>
                        <div class="col-sm-9">
                            <input id="forgetDisplayName" class="form-control" type="text" name="DisplayName">
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="forgetAccount" class="col-sm-3 col-form-label">信箱</label>
                        <div class="col-sm-9">
                            <input id="forgetAccount" class="form-control" type="text" name="Account">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">提交申請</button>
            </form>
        </div>
    </div>
</div>
