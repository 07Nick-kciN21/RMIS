@model RMIS.Models.Portal.LoginView

@{
    ViewData["Title"] = "登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">登入</h2>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="UserName">使用者名稱</label>
                <input asp-for="UserName" class="form-control" placeholder="輸入使用者名稱">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Password">密碼</label>
                <input asp-for="Password" class="form-control" placeholder="輸入密碼" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mt-3">
                <input asp-for="RememberMe" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label">記住我</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">登入</button>
        </form>
        <div class="mt-3 text-center">
            <a href="/Portal/Register">註冊帳號</a>
        </div>
        <div class="mt-3 text-center">
            <a href="#">忘記密碼？</a>
        </div>
    </div>
</div>
