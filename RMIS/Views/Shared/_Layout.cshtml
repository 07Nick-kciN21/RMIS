<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RMIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RMIS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index/dropdown.css" />
    <link rel="stylesheet" href="~/css/index/panel.css" />
    <link rel="stylesheet" href="~/css/index/measureTool.css" />
    <link rel="stylesheet" href="~/css/index/_layout.css" />
    <link rel="stylesheet" href="~/lib/leaflet/leaflet.css" />
    <link rel="stylesheet" href="~/lib//leaflet-geoman/leaflet-geoman.css" />
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/leaflet/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet.gridlayer.googlemutant@latest/dist/Leaflet.GoogleMutant.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/leaflet-pip@latest/leaflet-pip.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/leaflet-geometryutil@0.10.3/src/leaflet.geometryutil.min.js"></script>

    <script src="~/lib/leaflet-geoman/leaflet-geoman.min.js"></script>

    <script src="~/lib/turf.js"></script>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        .content-wrapper {
            height: 100%;
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <header class="gx-0 custom-header" style="display:flex">
            <div class="">
                @* <div class="nav-item">
                    <button class="dropdown-button" onclick="location.href='@Url.Action("Index", "Home")'">首頁</button>
                </div> *@
                @if (IsSectionDefined("HomeHeaderToolBar"))
                {
                    @RenderSection("HomeHeaderToolBar", required: false)
                }
            </div>
            @if (IsSectionDefined("HomeHeaderNavList"))
            {
                @RenderSection("HomeHeaderNavList", required: false)
            }
        </header>
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
