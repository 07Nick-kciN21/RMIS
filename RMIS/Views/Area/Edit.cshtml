<div class="container mt-5">
    <h1>Add New Area</h1>
    <form id="areaForm">
        <!-- Area 基本信息 -->
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="City" required>
            </div>
            <div class="col-md-4">
                <label for="town" class="form-label">Town</label>
                <input type="text" class="form-control" id="town" name="town" placeholder="Town" required>
            </div>
            <div class="col-md-4">
                <label for="name" class="form-label">Area Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Area Name" required>
            </div>
        </div>

        <!-- 动态添加 Points -->
        <h3>Points</h3>
        <div id="pointsContainer">
            <div class="row mb-3 point-entry">
                <div class="col-md-6">
                    <label for="latitude" class="form-label">Latitude</label>
                    <input type="number" step="any" class="form-control" name="points[0].latitude" placeholder="Latitude" required>
                </div>
                <div class="col-md-6">
                    <label for="longitude" class="form-label">Longitude</label>
                    <input type="number" step="any" class="form-control" name="points[0].longitude" placeholder="Longitude" required>
                </div>
            </div>
        </div>

        <!-- 添加 Point 按钮 -->
        <button type="button" class="btn btn-secondary" id="addPointBtn">Add Point</button>

        <!-- 提交按钮 -->
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>