<div class="offcanvas offcanvas-start custom-offcanvas-width" style="background-color:#f2f7ec; z-index: 1050" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="layerListBlock" aria-labelledby="layerListBlockLabel">
    <div class="layerList container-fluid">
        <h5 class="offcanvas-body" id="offcanvasExampleLabel">圖資清單</h5>
    </div>
</div>
<div id="indexMap" style="width: 100%; height: 100vh;"></div>

<div id="searchPanel" class="panel searchPanel hide">
    <div class="panelHeading">
        快速搜尋
        <button class="closeButton">&times;</button>
    </div>
    <div class="panelBody">
        <input type="text" class="searchPanelInput" placeholder="請輸入">
        <button class="searchPanelBtn">搜尋</button>
    </div>
    <div class="panelFooter">
        <ul id="searchList" class="panelList">
        </ul>
    </div>
</div>

<div id="painterPanel" class="panel painterPanel hide">
    <div class="panelHeading">
        繪圖板
        <button class="closeButton">&times;</button>
    </div>
    <div class="panelBody">
        <div class="colorPickers">
            <label>外框</label>
            <input type="color" id="borderColor" name="colorPicker" value="#ff0000">
            <label>填滿</label>
            <input type="color" id="fillColor" name="colorPicker" value="#ff0000">
        </div>
        <div class="drawMenu" title="匯入/匯出">
            <ul id="ptbInOut" class="dropdown-menu dropdown-left">
                <li id="ptbIO_0" aria-expanded="true">匯入Json</li>
                <li id="ptbIO_1">匯出Json</li>
            </ul>
        </div>
    </div>
    <div class="panelFooter">
        <ul id="painterList" class="panelList">
        </ul>
    </div>
</div>

<div id="searchPropPanel" class="panel painterPanel hide">
    <div class="panelHeading">
        屬性搜尋
        <button class="closeButton">&times;</button>
    </div>
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
        <label class="btn btn-outline-success" for="btnradio1">依屬性</label>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
        <label class="btn btn-outline-success" for="btnradio2">依空間</label>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
        <label class="btn btn-outline-success" for="btnradio3">結果</label>

    </div>
    <div id="prop1" class="panelBody" style="display: block">
        <div class="form-group" style="display: flex; align-items: center;">
            <label for="pFeatLayers" style="margin-right: 10px;">
                圖層
            </label>
            <select id="pFeatSelect" class="select-full form-control" style="width:90%">
                <option value="-1">請選擇</option>
            </select>
        </div>
        <div id="propContent">
            <div class="form-group" style="width:40%; float: left;">
                <label style="vertical-align: text-top;margin: 0px">欄位</label>
                <div class="listBox" style="margin:0px; border:solid;">
                    <div class="listResult" style="height:120px; overflow-y: auto;">
                        <ul id="propFieldList">
                        </ul>
                    </div>
                </div>
            </div>
            <div class="form-group" style="width:50%; height:120px; margin-right: 12px; float: right;">
                <label style="vertical-align: text-top;margin: 0px">值</label>
                <div class="listBox" style="margin:0px; border:solid;">
                    <div class="listResult" style="height:120px; overflow-y: auto;">
                        <ul id="propValueList">

                        </ul>
                    </div>
                </div>
            </div>

            <div style="clear:both; padding-top:8px">
                <button class="btn js-modal-toggle" id="propSqlClear">清除</button>
                <button class="btn js-modal-toggle" id="propSqlVerify">驗證</button>
                <button class="btn js-modal-toggle" id="propGoFilter">進行篩選</button>
            </div>
        </div>
    </div>
    <div id="prop2" class="panelBody" style="display: none">
        <div class="form-group" style="display: flex; align-items: center;">
            <label for="gFeatSelect" style="margin-right: 10px;">
                圖層
            </label>
            <select id="gFeatSelect" class="select-full form-control" style="width:90%">
                <option value="-1">請選擇</option>
            </select>
        </div>
    </div>
</div>

