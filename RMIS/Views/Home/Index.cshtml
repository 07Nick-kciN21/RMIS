<div class="offcanvas offcanvas-start custom-offcanvas-width" style="background-color:#f2f7ec; z-index: 1050" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="layerListBlock" aria-labelledby="layerListBlockLabel">
    <div id="layerBarContainer" class="layerList container-fluid">
        <h5 class="offcanvas-body" id="offcanvasExampleLabel">圖資清單</h5>
    </div>
</div>
<div id="indexMap" style="width: 100%; height: 100vh;"></div>

<div id="searchPanel" class="panel hide">
    <div class="panelHeading">
        快速搜尋
        <button class="closeButton">&times;</button>
    </div>
    <div class="panelBody">
        <input type="text" class="searchPanelInput" placeholder="請輸入">
        <button class="searchPanelBtn">搜尋</button>
    </div>
    <div class="panelFooter">
        <ul id="searchList" class="panelList">
        </ul>
    </div>
</div>

<div id="painterPanel" class="panel hide">
    <div class="panelHeading">
        繪圖板
        <button class="closeButton">&times;</button>
    </div>
    <div class="panelBody">
        <div class="colorPickers">
            <label>外框</label>
            <input type="color" id="borderColor" name="colorPicker" value="#ff0000">
            <label>填滿</label>
            <input type="color" id="fillColor" name="colorPicker" value="#ff0000">
        </div>
        <div class="drawMenu" title="匯入/匯出">
            <ul id="ptbInOut" class="dropdown-menu dropdown-left">
                <li id="ptbIO_0" aria-expanded="true">匯入Json</li>
                <li id="ptbIO_1">匯出Json</li>
            </ul>
        </div>
    </div>
    <div class="panelFooter">
        <ul id="painterList" class="panelList">
        </ul>
    </div>
</div>

<div id="searchPropPanel" class="panel hide">
    <div class="panelHeading">
        屬性搜尋
        <button class="closeButton">&times;</button>
    </div>
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked/>
        <label class="btn btn-outline-success" style="width:25%" for="btnradio1">依屬性</label>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off"/>
        <label class="btn btn-outline-success" style="width:25%" for="btnradio2">依空間</label>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off"/>
        <label class="btn btn-outline-success" style="width:25%; visibility: hidden" for="btnradio3">結果</label>

        <input type="radio" class="btn-check" name="btnradio" id="btnradio4" autocomplete="off"/>
        <label class="btn btn-outline-success" style="width:25%; visibility: hidden" for="btnradio4">數據統計</label>
    </div>
    <div id="prop1" class="panelBody" style="display: block">
        <div class="form-group" style="display: flex; align-items: center;">
            <select id="pFeatSelect" class="form-control" style="flex-grow: 1;">
                <option value="-1">請選擇圖層</option>
            </select>
        </div>
        <div id="propContent">
            <div id="propQuery" class="panelList" style="height:300px; max-height:300px; clear:both;">
            </div>
            <div class="form-group" style="clear:both;">
                <button class="btn js-modal-toggle" id="propClear">清除</button>
                <button class="btn js-modal-toggle" id="propGoFilter">進行篩選</button>
            </div>
        </div>
    </div>
    <div id="prop2" class="panelBody" style="display: none">
        <div class="form-group" style="display: flex; align-items: center;">
            <label for="gFeatSelect" style="margin-right: 10px;">
                圖層
            </label>
            <select id="gFeatSelect" class="select-full form-control" style="width:90%">
                <option value="-1">請選擇</option>
            </select>
        </div>
        <div id="propGeoCustom" class="form-group" style="display: flex; align-items: center;">
            <button id="propRect">矩形</button>
            <button id="propPolygon">多邊形</button>
            <button id="propCircle">圓形</button>
        </div>
        <div class="form-group" style="clear:both;">
            <button class="btn js-modal-toggle" id="geoClear">清除</button>
            <button class="btn js-modal-toggle" id="geoGoFilter">進行篩選</button>
        </div>
    </div>
    <div id="prop3" class="panelBody" style="background-color: white; padding-bottom: 0.2rem; display: none;">
        <div style="height:30px;">
            <span style="width:50px; height:30px; margin:0px">圖層:</span>
            <span id="propResultLayer" style="margin:0px"></span>
        </div>
        <div>
            <span style="margin-top:4px">結果列表</span>
            <span id="totalCount"></span>
            <a id="exportExcel" style="float:right">匯出Excel</a>
        </div>
        <div id="propResultDiv" class="panelList" style="width:100%; height:280px; max-height:280px; overflow:auto;">
            <table id="propResult" class="propTable">
                <thead id="propThead"></thead>
                <tbody id="propTbody"></tbody>
            </table>
        </div>
        <div class="propPage">
            <span style="float:left">每頁最多</span>
            <select id="pageSize" style="float:left">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
            </select>
            <span style="float:left"> 筆</span>
            <span id="propPages" style="height:63px; width:50%; float:right;overflow-x: hidden; overflow-y: auto;">
            </span>
        </div>
    </div>
</div>

