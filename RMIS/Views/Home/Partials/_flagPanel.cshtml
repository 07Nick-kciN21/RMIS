@* 權管土地 *@
<link rel="stylesheet" href="~/css/index/flagPanel.css" />
<div id="flagPanel" class="panel hide">
    <div class="panelHeading">
        <span>
            權管土地
        </span>
        <button class="closeButton">&times;</button>
    </div>
    @* 滾動條 *@
    <div style="scrollbar-width: thin; height: 90%; overflow-y: auto;">
        <div class="panelBody">
            @* 行政區 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>行政區</label>
                <select id="adminSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">請選擇</option>
                    <option value="0">桃園區</option>
                    <option value="1">大溪區</option>
                    <option value="2">中壢區</option>
                    <option value="3">楊梅區</option>
                    <option value="4">蘆竹區</option>
                    <option value="5">大園區</option>
                    <option value="6">龜山區</option>
                    <option value="7">八德區</option>
                    <option value="8">龍潭區</option>
                    <option value="9">平鎮區</option>
                    <option value="10">新屋區</option>
                    <option value="11">觀音區</option>
                    <option value="12">復興區</option>
                </select>
            </div>
            @* 管理單位 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>管理單位</label>
                <select id="manageSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">請選擇管理單位</option>
                    <option value="0">桃園市政府養護工程處</option>
                    <option value="1">公園綠地科</option>
                    <option value="2">道路行政科</option>
                    <option value="3">秘書室</option>
                </select>
            </div>
            @* 疑似占用 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>疑似占用</label>
                <div class="fieldset-radio" style="width: 70%;">
                    <label class="inline-block">
                        <input type="radio" name="locOcc" value="1" checked="">占用
                    </label>
                    <label class="inline-block">
                        <input type="radio" name="locOcc" value="0">未占用
                    </label>
                    <label class="inline-block">
                        <input type="radio" name="locOcc" value="-1">全部
                    </label>
                </div>
            </div>
            @* 疑似占用類型 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>占用類型</label>
                <select id="suspectTypeSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">請選擇疑似占用類型</option>
                    <option value="1">第一類-荒廢未管理之地</option>
                    <option value="2">第二類-民眾種植有價作物</option>
                    <option value="3">第三類-鐵皮、柵欄或其他可移動式之臨時設施</option>
                    <option value="4">第四類-永久建築物</option>
                </select>
            </div>
            @* 地段 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>地段</label>
                <select id="landSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">請選擇地段</option>
                    <option value="龍壽段">龍壽段</option>
                    <option value="雙龍段">雙龍段</option>
                </select>
            </div>
            @* 地號 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>地號</label>
                <div class="boxList">
                    <div class="boxHeader">
                        <input type="text" id="landNo" class="form-control" style="flex-grow: 1;border-radius:0;" placeholder="搜尋地號">
                    </div>
                    <div class="boxBody">
                        <ul id="locOccList">
                            <li class="panelResult">1001</li>
                            <li class="panelResult">1002</li>
                            <li class="panelResult">1003</li>
                            <li class="panelResult">1004</li>
                            <li class="panelResult">1005</li>
                            <li class="panelResult">1006</li>
                            <li class="panelResult">1007</li>
                            <li class="panelResult">1008</li>
                            <li class="panelResult">1009</li>
                            <li class="panelResult">1010</li>
                        </ul>
                    </div>
                </div>
            </div>
            @* 年度 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>年度</label>
                <select id="yearSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">全部</option>
                    <option value="105">105年</option>
                    <option value="106">106年</option>
                    <option value="107">107年</option>
                    <option value="108">108年</option>
                    <option value="109">109年</option>
                    <option value="110">110年</option>
                    <option value="111">111年</option>
                    <option value="112">112年</option>
                    <option value="113">113年</option>
                </select>
            </div>
            @* 使用分區 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>使用分區</label>
                <select id="useSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">全部</option>
                </select>
            </div>
            @* 案件狀況 *@
            <div class="form-group" style="display: flex; align-items: center;">
                <label>案件狀況</label>
                <select id="caseSelect" class="form-select" style="flex-grow: 1;border-radius:0;">
                    <option value="-1">請選擇案件狀況</option>
                    @* 發文通知 *@
                    <option value="0">發文通知</option>
                    @* 未處理 *@
                    <option value="1">未處理</option>
                    @* 已處理 *@
                    <option value="2">已處理</option>
                </select>
            </div>
        </div>
        <div class="form-group" style="clear: both; padding: 8px; width: 100%; margin: 0 auto; text-align: center; justify-content: center;">
            <button id="flagGoResult" class="btn js-modal-toggle goResult">顯示結果</button>
        </div>
        <div style="margin: 0% 15px;">
            <span style="margin-top:4px">結果列表</span>
            <span id="flagCount" class="totalCount"></span>
            <a id="flagExcel" class="exportExcel" style="float:right">匯出Excel</a>
        </div>
        <div id="flagResultDiv" class="panelList">
            <table id="flagTable" class="propTable">
                <thead id="flagThead">
                    <tr id="Occdr" role="row">
                        <th style="width:100px"></th>
                        <th style="width:100px">案號</th>
                        <th style="width:120px">清查年度</th>
                        <th style="width:120px">疑似占用</th>
                        <th style="width:100px">勘查表</th>
                        <th style="width:120px">案件狀態</th>
                        <th style="width:100px">備註</th>
                        <th style="width:65px">附件</th>
                    </tr>
                </thead>
                <tbody id="flagTbody"></tbody>
            </table>
        </div>
        <div class="tablePage" style="margin: 15px;">
            <span style="float:left">每頁最多</span>
            <select id="flagPageSize" style="float:left">
                <option value="10">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
            </select>
            <span style="float:left"> 筆</span>
            <span id="flagPages" class="pageList" style="height:63px; width:50%; float:right;overflow-x: hidden; overflow-y: auto;">
            </span>
        </div>
    </div>
</div>
